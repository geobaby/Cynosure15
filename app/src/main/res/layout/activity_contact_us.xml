<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ibotrox.leptocephalus.geobaby.testtablayout.ContactUsActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <!--facebook link-->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:elevation="5dp"
        card_view:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/info_text1"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#3b5998"
                android:text="Facebook"
                android:textColor="#FFF"
                android:textAlignment="center"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFF"
                    android:src="@mipmap/fb"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/info_text1.1"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="25dp"
                    android:textColor="#3b5998"
                    android:gravity="center"
                    android:text="@string/facebook_link"
                    android:textAlignment="center"
                    android:textSize="15dp" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!--instagram link-->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:elevation="5dp"
        card_view:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/info_text2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="#517fa4"
                android:gravity="center"
                android:text="Instagram"
                android:textColor="#FFF"
                android:textAlignment="center"
                android:textSize="20dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFF"
                    android:src="@mipmap/insta"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/info_text2.1"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="25dp"
                    android:textColor="#517fa4"
                    android:gravity="center"
                    android:text="@string/instagram_link"
                    android:textAlignment="center"
                    android:textSize="15dp" />

            </LinearLayout>

</LinearLayout>
    </android.support.v7.widget.CardView>

    <!--twitter link-->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:elevation="5dp"
        card_view:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/info_text3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="#00aced"
                android:gravity="center"
                android:text="Twitter"
                android:textAlignment="center"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFF"
                    android:src="@mipmap/twit"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/info_text3.1"
                    android:layout_width="173dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="25dp"
                    android:textColor="#00aced"
                    android:gravity="center"
                    android:text="@string/twitter_link"
                    android:textAlignment="center"
                    android:textSize="15dp" />

            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>




            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/app_bar"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:elevation="0dp"
                card_view:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/info_text4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/primaryColor"
                        android:gravity="center"
                        android:text="Contact Us:\n\nArun Varghese Kurian: 8301024397\nGeo Baby: 8281487515\nGeorgy P Jacob: 9495556731\n"
                        android:textColor="@color/primaryTextColor"
                        android:textAlignment="center"
                        android:textSize="18sp" />


                </LinearLayout>
            </android.support.v7.widget.CardView>



        </LinearLayout>
    </ScrollView>

</LinearLayout>
